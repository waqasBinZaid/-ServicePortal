@model IEnumerable<ServicePortal.Models.Branch>
@{
    ViewBag.Title = "BranchiesList";
    Layout = "~/Views/Shared/HeadofficeMasterPage.cshtml";
}

<div class="col-md-4 col-md-offset-4">

    @Html.ActionLink("Add New ", "AddNewBranch", " Branch", new { @class = "btn btn-outline btn-primary btn-lg btn-block" })
</div>
<br>
<br>
<br>


<div class="panel panel-default">
    <div class="panel-heading">
     Branches List
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Branch Name</th>
                        <th>Phone</th>
                        <th>CreatedDate</th>
                        <th>MangeUser</th>


                        <th>Action</th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var itm in Model)
                    {
                        <tr>

                            <td>@itm.BranchName</td>

                            <td>@itm.Phone</td>
                            <td>@itm.CreatedDate</td>
                            <td>
                                <a href="@Url.Action("BranchUser1","Branch",new {id=itm.CompanyID, bid=itm.id})" class="btn btn-outline btn-primary" title="Add User">
                                    Users
                                </a>
                            </td>
                            <td>
                                @* <a href="@Url.Action("Delete","Companies",new {id=itm.id })" class="btn btn-danger btn-circle" title="Delete">
                            <i class="fa fa-times"></i>
                        </a>*@

                                <a href="#" class="btn btn-primary btn-circle" title="Edit">
                                    <i class="fa fa-list"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
