@model ServicePortal.Models.BranchStock

<div class="table-responsive">

    <div class="form-inline">
       
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add New Item In Stocks
                </div>
                <div class="panel-body">
                    <div class="table-responsive">

                        <div class="form-inline">
                            @using (Html.BeginForm("SaveStocks", "BranchInventory", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                                @Html.HiddenFor(m => m.Id);
                    if (TempData["Error"] != null)
                    {
                                    <div class="alert alert-warning alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                                        <div class="alert alert-danger">
                                            @TempData["Error"]
                                        </div>

                                    </div>
                                }
                                <div class="form-group has-success" style="width:300px">

                                    <label class="control-label" for="inputSuccess">Item</label>
                                    <br>
                                    @Html.DropDownListFor(m => m.ItemID, ViewBag.Item as List<SelectListItem>, new { @class = "form-control", id = "inputSuccess", required = "required" })
                                        </div>
                                <div class="form-group has-success" style="width:300px">

                                    <label class="control-label" for="inputSuccess">Quantity</label>
                                    <br>
                                    @Html.TextBoxFor(m => m.Quantity, null, new { @class = "form-control", id = "inputSuccess", placeholder = "Quantity", required = "required" })
                                </div>
                                <br>
                                <br>
                                <div class="form-group has-success" style="width:300px">

                                    <button type="submit" class="btn btn-primary">Save</button>

                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>