@model IEnumerable<ServicePortal.Models.Company>
@{
    ViewBag.Title = "ListCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-4 col-md-offset-4">

    @Html.ActionLink("Add New ", "NewCompany", "Companies", new { @class = "btn btn-outline btn-primary btn-lg btn-block" })
</div>
<br><br><br>

<div class="panel panel-default">
    <div class="panel-heading">
      List Of Companies
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Name</th>
                        <th>ContectPerson</th>
                        <th>Email</th>
                        <th>WebSite</th>
                        <th>Phone</th>
                        <th>City/Country</th>

                        <th>MangeUser</th>


                        <th>Action</th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var itm in Model)
                    {
                        <tr>
                            <td>
                                <img src=@itm.Logo style="width:80px; height:80px;" alt="auto" />
                            </td>
                            <td>@itm.CompanyName</td>

                            <td>@itm.ContectPerson</td>
                            <td>@itm.Email</td>
                            <td>@itm.Web</td>

                            <td>@itm.Call1</td>
                            <td>@itm.City/@itm.Country</td>

                            <td>
                                <a href="@Url.Action("CompanyUser1","Companies",new {id=itm.id })" class="btn btn-outline btn-primary" title="Add User">
                                    Users
                                </a>
                            </td>
                            <td>
                                @* <a href="@Url.Action("Delete","Companies",new {id=itm.id })" class="btn btn-danger btn-circle" title="Delete">
                            <i class="fa fa-times"></i>
                        </a>*@

                                <a href="#" class="btn btn-primary btn-circle" title="Edit">
                                    <i class="fa fa-list"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
                
            </table>
        </div>
    </div>
</div>
