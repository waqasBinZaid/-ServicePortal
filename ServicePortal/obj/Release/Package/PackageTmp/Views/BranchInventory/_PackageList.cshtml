@model IEnumerable<ServicePortal.Models.PackageBranchStock>

<div class="panel panel-default">
    <div class="panel-heading">
        List Of package stock
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ItemName</th>
                        <th>Total</th>
                        <th>Action</th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var itm in Model)
                    {
                        <tr>

                            <td>@itm.WeighBridge.Name</td>
                            <td>@itm.Quantity</td>
                            <td>
                                <a href="@Url.Action("PackageDetail","BranchInventory",new {id=itm.Id})" class="btn btn-outline btn-primary" title="Update">
                                    Details
                                </a>
                                <a href="@Url.Action("PackageID","BranchInventory",new {id=itm.WeighBridgeID})" class="btn btn-outline btn-primary" title="Issue">
                                    Issue
                                    
                                    </a>
                                    <a href="#" class="btn btn-outline btn-primary" title="Issue">
                                        Return
                                    </a>
                                    <a href="#" class="btn btn-outline btn-primary" title="Issue">
                                        Trnasfer
                                    </a>
                                    <a href="#" class="btn btn-outline btn-primary" title="Issue">
                                        Scrap
                                    </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
