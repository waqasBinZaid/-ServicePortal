@model IEnumerable<ServicePortal.Models.Designation>
@{
    ViewBag.Title = "DesignationList";
    Layout = "~/Views/Shared/HeadofficeMasterPage.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Designations
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <div class="col-md-4 col-md-offset-4">
                @Html.Action("AddNewDesignation", "Designation")


                @*@Html.ActionLink("Add New ", "AddNewDepartment", "Department", new { @class = "btn btn-outline btn-primary btn-lg btn-block" })*@
            </div>
            <div style="width:900px;height:500px;margin-left:100px;">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>Name</th>

                                    <th>Action</th>


                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var itm in Model)
                                {
                                    <tr>

                                        <td>@itm.Description</td>




                                        <td>
                                            <a href="@Url.Action("delete","Designation",new {id=itm.id })" class="btn btn-danger btn-circle" title="Delete">
                                                <i class="fa fa-times"></i>
                                            </a>

                                            <a href="#" class="btn btn-primary btn-circle" title="Edit">
                                                <i class="fa fa-list"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>

        </div>
    </div>

</div>