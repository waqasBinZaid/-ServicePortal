@model ServicePortal.Models.Designation
<div class="table-responsive">

    <div class="form-inline">
        @using (Html.BeginForm("DesignationSave", "Designation"))
        {
            if (TempData["Error"] != null)
            {
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                    <div class="alert alert-danger">
                        @TempData["Error"]
                    </div>

                </div>
            }
           
                <div class="col-md-12 " >

                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Description, null, new { @class = "form-control", id = "inputSuccess", placeholder = "Add NEW", required = "required" })
                       </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Save</button>

                    </div>
                    </div>
               

           
           
            

        




                    







        }



    </div>





</div>

