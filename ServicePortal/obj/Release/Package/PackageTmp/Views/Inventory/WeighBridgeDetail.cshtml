@model IEnumerable<ServicePortal.Models.WeighBridgeItemValue>
@{
    ViewBag.Title = "WeighBridgeDetail";
    Layout = "~/Views/Shared/HeadofficeMasterPage.cshtml";
}
<div class="row col-md-12">
    <div class="col-md-6">
        <div class="panel panel-default">
           
            <div class="panel-body">
                <h4>@Session["packname"]</h4>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>

                                    <th>Item Name</th>
                                    <th>Quantity</th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var itm in Model)
                    {
                        <tr>

                            <td>@itm.inventryItem.SubCategory.Category.Catgory | @itm.inventryItem.SubCategory.SubCat</td>

                            <td>@itm.Quantity</td>

                        </tr>

        }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>



        <div class="col-md-6">
            @Html.Action("AddItemValue", "Inventory")
        </div>
    </div>
