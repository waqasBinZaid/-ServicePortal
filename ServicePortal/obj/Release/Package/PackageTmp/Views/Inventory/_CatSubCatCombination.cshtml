@model IEnumerable<ServicePortal.Models.inventryItem>
@{
    ViewBag.Title = "List";
    Layout = null;
}

<div class="panel panel-default">

    <div class="panel-body">
        <div class="table-responsive">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>Item Name</th>

                            <th>Model</th>
                   

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var itm in Model)
                        {
                        <tr>

                            <td>@itm.SubCategory.Category.Catgory @itm.SubCategory.SubCat</td>


                            <td>@itm.Model.Models</td>

                            <td>
                                <a href="@Url.Action("Combinations","Inventory",new {id=itm.id })" class="btn btn-outline btn-primary" title="View Details">
                                    Select
                                </a>
                            </td>


                        </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>

